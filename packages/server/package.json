{
  "name": "@tsed/server",
  "version": "1.0.0",
  "description": "Server based on Ts.ED framework",
  "author": "Romain Lenzotti",
  "private": true,
  "scripts": {
    "build": "yarn tsc",
    "tsc": "tsc --project tsconfig.compile.json",
    "tsc:w": "tsc --project tsconfig.json -w",
    "start": "tsnd --inspect --ignore-watch node_modules --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "test": "yarn test:lint && yarn test:coverage",
    "test:unit": "cross-env NODE_ENV=test CI=1 jest --detectOpenHandles --coverage",
    "test:coverage": "yarn test:unit",
    "test:lint": "yarn eslint src --ext .ts",
    "test:lint:fix": "yarn eslint src --ext .ts --fix",
    "prettier:fix": "yarn prettier \"{src,test}/**/*.ts\" --write"
  },
  "dependencies": {
    "@tsed/app": "1.0.0",
    "@tsedio/vite": "1.0.1",
    "@tsed/ajv": "6.59.0",
    "@tsed/common": "6.59.0",
    "@tsed/core": "6.59.0",
    "@tsed/di": "6.59.0",
    "@tsed/exceptions": "6.59.0",
    "@tsed/engines": "1.1.2",
    "@tsed/formio": "6.59.0",
    "@tsed/json-mapper": "6.59.0",
    "@tsed/platform-express": "6.59.0",
    "@tsed/schema": "6.59.0",
    "@tsed/swagger": "6.59.0",
    "ajv": "8.5.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "envalid": "^7.1.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "globby": "11.0.2",
    "method-override": "^3.0.0"
  },
  "devDependencies": {
    "@tsed/cli-plugin-eslint": "3.3.0",
    "@tsed/cli-plugin-jest": "3.3.0",
    "@tsed/cli-plugin-mongoose": "3.3.0",
    "@tsed/cli-plugin-passport": "3.3.0",
    "@tsed/testing-mongoose": "6.59.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-session": "1.17.3",
    "@types/jest": "^26.0.20",
    "@types/method-override": "^0.0.31",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.22",
    "@types/passport": "^1.0.5",
    "@types/passport-github": "1.1.5",
    "@types/supertest": "^2.0.10",
    "@types/url-parse": "^1.4.3",
    "supertest": "^6.1.3"
  },
  "peerDependencies": {},
  "tsed": {
    "packageManager": "yarn",
    "convention": "std"
  }
}